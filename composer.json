{
    "name": "pradodigital/php-stathat-bindings",
    "description": "PHP bindings for the StatHat API.",
    "type": "library",
    "keywords": ["stats", "stathat", "api bindings"],
    "homepage" : "https://github.com/pradodigital/php-stathat-bindings",
    "license": "MIT",

    "authors": [
        {
            "name": "Jose Prado",
            "email": "cowlby@me.com"
        }
    ],

    "require" : {
        "php" : ">=5.3.2"
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "squizlabs/php_codesniffer" : "~1.4",
        "phpmd/phpmd" : "~1.5",
        "pdepend/pdepend" : "~1.1",
        "sebastian/phpcpd": "~1.4",
        "satooshi/php-coveralls": "dev-master@dev"
    },

    "autoload": {
        "psr-0": {
            "PradoDigital\\StatHat": "src/",
            "PradoDigital\\Tests\\StatHat": "tests/"
        }
    },

    "support" : {
        "source" : "https://github.com/pradodigital/php-stathat-bindings/tree/master",
        "issues" : "https://github.com/pradodigital/php-stathat-bindings/issues",
        "wiki" : "https://github.com/pradodigital/php-stathat-bindings/wiki"
    }
}
